        <url>https://github.com/yangshuan/hr-management</url>
    </scm>
    <developers>
        <developer>
            <id>yangshuan</id>
            <name>Yang Shuan</name>
            <email>yangshuan45@gmail.com</email>
            <roles>
                <role>Project founder</role>
            </roles>
