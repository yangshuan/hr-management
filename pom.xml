    <modelVersion>4.0.0</modelVersion>

    <groupId>com.oomlife.hr</groupId>
    <artifactId>hr-management</artifactId>
    <version>${project.version}</version>
    <packaging>pom</packaging>

    <name>Human Resource management system</name>
    <description>Human Resource management system</description>
    <url>https://github.com/yangshuan/hr-management</url>
    <licenses>
        <license>
